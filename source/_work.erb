<div class="Wrapper center">

  <a href="#" class="filter">Show:</a>

  <ul class="tags_container tagsort-tags-container" data-type="type">
    <li class="tagsort-active all">All</li>
  </ul>

  <ul class="image_grid">
    <% blog.articles.each do |article| %>
    <% if article.data.tags('new')  %>
      <li class="new" data-item-tags="<%= article.data.type %>s">
    <% else %>
      <li data-item-tags="<%= article.data.type %>s">
    <% end %>
      <a href="<%= article.url %>">
        <%= image_tag 'bg.png', :class => "class", :data => { :src => 'assets/images/work/' + article.data.images.first + '.jpg', :width => '550' }  %>
        <%#= image_tag entry.filename, :title => "title", :class => "class", :data => { :description => entry.caption, :title => entry.caption }  %>
        <noscript>
          <%= image_tag 'work/' + article.data.images.first + '.jpg', :width => '550' %>
        </noscript>
        <div>
          <p><%= article.title %></p>
          <% if article.data.tags('new')  %>
            <span class="new">New!</span>
          <% end %>
        </div>
      </a>
    </li>
    <% end %>
  </ul>
</div>
