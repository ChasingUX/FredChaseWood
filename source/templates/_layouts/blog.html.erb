<%= partial 'header' %>

<% wrap_layout :layout do %>
  <div class="Wrapper Wrapper--wide">
    <div class="piece_header">
      <h1><%= current_page.title %></h1>
      <ul>

        <% wood = current_page.data.wood %>
        <% type = current_page.data.type %>
        <% dimensions = current_page.data.dimensions %>
        <% price = current_page.data.price %>
        <% buy = current_page.data.buy %>


        <% if wood %><li><span>Wood:</span><%= wood %></li><% end %>
        <% if type %><li><span>Type:</span><%= type %></li><% end %>
        <% if dimensions %><li><span>Dimensions:</span><%= dimensions %></li><% end %>
        <% if price %><li><span>Price:</span>$<%= price %><% if buy %><a class="buy" href="<%= buy %>"><span>Buy</span></a><% end %></li><% end %>
      </ul>

      <!-- Posted <%#= current_page.date.strftime('%m-%e-%Y') %> -->
    </div>

    <div class="Slide-container-single">
      <% current_page.data.images.each do |f| %>
        <div class="slide-single"><%= image_tag 'work/' + f + '.jpg', :width => '550' %></div>
      <% end %>
    </div>
  </div>

  <footer>
   <% prev_article = current_article.article_previous %>
    <% if prev_article %>
      <a class="prev arrow" href="<%= prev_article.url %>" rel="prev" title="Previous article: <%= prev_article.title %>">PREV PEICE</a>
    <% end %>

    <a href="#" class="logo"></a>

    <% next_article = current_article.article_next %>
    <% if next_article %>
      <a class="next arrow" href="<%= next_article.url %>" rel="next" title="Next article: <%= next_article.title %>">NEXT PEICE</a>
    <% end %>
  </footer>
<% end %>
